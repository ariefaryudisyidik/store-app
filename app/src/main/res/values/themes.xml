<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Store" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue_2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_2</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Default Font -->
        <item name="fontFamily">@font/maison_neue_book</item>
    </style>

    <!-- Text -->
    <style name="Text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Regular">
        <item name="fontFamily">@font/maison_neue_book</item>
    </style>

    <style name="Text.Bold">
        <item name="fontFamily">@font/maison_neue_bold</item>
    </style>

    <!-- Button -->
    <style name="Button">
        <item name="fontFamily">@font/maison_neue_bold</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="Button.Rounded">
        <item name="android:paddingVertical" tools:ignore="NewApi">8dp</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">16dp</item>
        <item name="cornerRadius">100dp</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:clickable">false</item>
    </style>

    <!-- Image -->
    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- EditText -->
    <style name="TextInputLayout">
        <item name="android:fontFamily">@font/maison_neue_book</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="startIconDrawable">@drawable/ic_search</item>
    </style>

    <style name="TextInputLayout.Outline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- SearchView -->
    <style name="SearchView">
        <item name="android:fontFamily">@font/maison_neue_book</item>
        <item name="android:textSize">16sp</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:queryHint">@string/find_stores_distributors</item>
        <item name="android:background">@drawable/bg_search</item>
    </style>
</resources>